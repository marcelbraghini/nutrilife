<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:backgroundTint="#ffffff">

    <ImageButton
        android:layout_width="189dp"
        android:layout_height="185dp"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:backgroundTint="#fbf8f8"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NutriLife"
        android:id="@+id/textView8"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#6a933f"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="VersÃ£o 1.0"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="250dp"
            android:textColor="#6a933f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtSobre"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#6a933f"
            android:text="Sobre Texto"
            android:textAlignment="center"
            android:elegantTextHeight="false"
            android:autoText="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtContato"
            android:layout_gravity="center_horizontal"
            android:textColor="#6a933f"
            android:text="Contato Texto"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtSite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#6a933f" />
    </LinearLayout>
</FrameLayout>